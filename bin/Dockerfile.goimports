FROM 890546402176.dkr.ecr.eu-central-1.amazonaws.com/hubdockercom/golang:1.11.2-alpine3.8 as build
RUN apk add --update --no-cache git bash    && \
    go get golang.org/x/tools/cmd/goimports && \
    cd /go/src/golang.org/x/tools           && \
    git checkout 92cdcd90bf52               && \
    go build -o /goimports ./cmd/goimports

FROM 890546402176.dkr.ecr.eu-central-1.amazonaws.com/hubdockercom/alpine
ENV GOPATH=/go
COPY --from=build /goimports /goimports
